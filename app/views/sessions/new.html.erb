<h1>Login</h1>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<%= form_tag sessions_path do |form| %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>
