<h1>Products</h1>
<%= link_to "Add Product", new_product_path %>
<table>
  <tr>
    <td>Name</td>
    <td>Price</td>
    <td>Description</td>
    <td>Category</td>
    <td>Action</td>
  </tr>
  <% if @products.empty? %>
    <tr><td colspan="5">No Products Found</td></tr>
  <% else %>
    <% @products.each do |product|
    @avatar_index = product.avatar
    %>
    <tr>
      <td> <%= product.name %></td>
      <td>
      <%= render "shared/index_image_display" %>
      </td>
      <td> <%= product.price %></td>
      <td> <%= product.body %></td>
      <td> <%= product.category.name%></td>
      <td>
        <%= link_to "Show", product_path(product.id) %>
        <%= link_to "Edit", edit_product_path(product.id) %>
        <%= link_to "Delete", product_path(product.id), method: :delete,
                data: {confirm: "Are you sure you want to delete product "+ product.name + "?"} %>
      </td>
    </tr>
    <% end %>
  <% end %>
</table>
